// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  password  String
  role      String   @default("PUBLIC") // SUPER_ADMIN, ADMIN, or PUBLIC
  posts     Post[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Category {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String   @unique
  slug      String   @unique
  posts     Post[]
  createdAt DateTime @default(now())

  @@map("categories")
}

model Post {
  id         String     @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  slug       String     @unique
  content    String
  excerpt    String?
  published  Boolean    @default(false)
  authorId   String?    @db.ObjectId
  author     User?      @relation(fields: [authorId], references: [id], onDelete: Cascade)
  creatorName String?  // For public posts without authentication
  editToken  String?   @unique // Token to allow editing of public posts
  categoryId String?    @db.ObjectId
  category   Category?  @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  tags       String     @default("") // Comma-separated tags
  imageUrl   String?    // Cloudinary image URL
  comments   Comment[]
  likes      Like[]
  views      Int        @default(0)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt

  @@index([published])
  @@index([categoryId])
  @@map("posts")
}

model Comment {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  content    String
  authorName String
  authorEmail String
  postId     String   @db.ObjectId
  post       Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  approved   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([postId])
  @@index([approved])
  @@map("comments")
}

model Like {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade)
  userIp    String?  // Track by IP for public users
  userEmail String?  // Track by email if logged in
  createdAt DateTime @default(now())

  @@index([postId])
  @@index([postId, userIp])
  @@index([postId, userEmail])
  @@map("likes")
}

model Profile {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  key       String   @unique
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

